mixin Feature(config)
  .col-md-4.col-lg-3.mt-4.mt-lg-8.text-center.text-md-start
    .badge(class=`${config.iconBg}`).p-3.rounded-3
      img(src=`${CWD}assets/img/icons/${config.icon}` alt='...').w-100.h-100
    h4.mt-5.mb-3.fw-bold=config.title
    p.fs-1.lh-sm!=config.text

mixin PartnershipCorroboration(config)
  .col-md-6.col-lg-4.text-center.mb-6.mb-md-0(class=`${config.order}`)
    img(src=`${CWD}assets/img/gallery/${config.image}` width='300' alt='...' style='border-radius:3rem;' class=`${config.imgShadow}`)
  .col-md-6.text-center.text-md-start.mb-6(class=`${config.offset}`)
    h6.fs-0.text-uppercase.fw-bold.text-primary=config.preTitle
    h6.fw-bold.fs-3.fs-lg-5.lh-sm=config.title
    p.my-4.fs-1.pe-xl-8!=config.text
    a.btn.hover-top.btn-collab(href='#' role='button')
      | Learn more
  